{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedVariables": "off"
            },
            "suspicious": {
                "noExplicitAny": "off",
                "noImplicitAnyLet": "off"
            },
            "style": {
                "useConst": "error",
                "useImportType": "off",
                "noUnusedTemplateLiteral": "off",
                "useTemplate": "off",
                "noNonNullAssertion": "off"
            },
            "complexity": {
                "noForEach": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    },
    "files": {
        "ignore": ["dist/**/*", "extra/**/*", "node_modules/**/*"]
    }
}
